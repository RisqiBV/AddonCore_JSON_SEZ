{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Size Master Schema",
  "description": "JSON contract for Size Master data including timestamps.",
  "type": "object",
  "properties": {
    "sizeCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Primary key for the size."
    },
    "sizeDescription": {
      "type": "string",
      "maxLength": 50,
      "description": "Description of the size."
    },
    "createdAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Creation timestamp."
    },
    "updatedAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Last update timestamp."
    },
    "deletedAt": {
      "type": ["string", "null"],
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Deletion timestamp (nullable)."
    }
  },
  "required": ["sizeCode", "sizeDescription", "createdAt", "updatedAt", "deletedAt"],
  "additionalProperties": false,
  "examples": [
    {
      "sizeCode": "42",
      "sizeDescription": "42",
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    },
    {
      "sizeCode": "42,5",
      "sizeDescription": "42.5",
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    },
    {
      "sizeCode": "L",
      "sizeDescription": "Large",
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    },
    {
      "sizeCode": "All",
      "sizeDescription": "All Size",
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    },
    {
      "sizeCode": "M",
      "sizeDescription": "Medium",
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    }
  ]
}