{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer Master Schema",
  "description": "JSON contract for Customer Master data including timestamps.",
  "type": "object",
  "properties": {
    "customerCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Primary key for the customer."
    },
    "customerName": {
      "type": "string",
      "maxLength": 50,
      "description": "Customer name."
    },
    "address": {
      "type": "string",
      "maxLength": 50,
      "description": "Customer address."
    },
    "city": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "City (optional)."
    },
    "province": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "Province or state (optional)."
    },
    "country": {
      "type": "string",
      "maxLength": 50,
      "description": "Country."
    },
    "npwp": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "Tax ID (optional)."
    },
    "createdAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Creation timestamp."
    },
    "updatedAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Last update timestamp."
    },
    "deletedAt": {
      "type": ["string", "null"],
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Deletion timestamp (nullable)."
    }
  },
  "required": [
    "customerCode",
    "customerName",
    "address",
    "country",
    "createdAt",
    "updatedAt",
    "deletedAt"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "customerCode": "CUST-ARMY01",
      "customerName": "Indonesian Armed Forces",
      "address": "Jl. Merdeka Barat No. 3",
      "city": "Jakarta",
      "province": "DKI Jakarta",
      "country": "Indonesia",
      "npwp": null,
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    },
    {
      "customerCode": "CUST-POL01",
      "customerName": "Indonesian National Police",
      "address": "Jl. Asia Afrika No. 65",
      "city": "Bandung",
      "province": "Jawa Barat",
      "country": "Indonesia",
      "npwp": null,
      "createdAt": "2025-09-29 10:05:00.000",
      "updatedAt": "2025-09-29 10:05:00.000",
      "deletedAt": null
    }
  ],
  "response": [
    {
      "status": "success",
      "message": "Data Master Customer successfully saved",
