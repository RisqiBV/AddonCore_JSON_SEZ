{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Supplier Master Schema",
  "description": "JSON contract for Supplier Master data including timestamps and all contact/location fields.",
  "type": "object",
  "properties": {
    "supplierCode": {
      "type": "string",
      "maxLength": 50,
      "description": "Primary key for the supplier."
    },
    "supplierName": {
      "type": "string",
      "maxLength": 200,
      "description": "Supplier name."
    },
    "address": {
      "type": "string",
      "maxLength": 200,
      "description": "Address of the supplier."
    },
    "stateorProvince": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "State or Province (optional)."
    },
    "countryorRegion": {
      "type": "string",
      "maxLength": 50,
      "description": "Country or region."
    },
    "city": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "City (optional)."
    },
    "npwp": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "Tax ID (optional)."
    },
    "emailAddress": {
      "type": ["string", "null"],
      "maxLength": 50,
      "format": "email",
      "description": "Email address (optional)."
    },
    "businessPhone": {
      "type": ["string", "null"],
      "maxLength": 25,
      "description": "Business phone number (optional)."
    },
    "faxNo": {
      "type": ["string", "null"],
      "maxLength": 25,
      "description": "Fax number (optional)."
    },
    "ziporPostalCode": {
      "type": ["string", "null"],
      "maxLength": 15,
      "description": "ZIP or postal code (optional)."
    }
  },
  "required": [
    "supplierCode",
    "supplierName",
    "address",
    "countryRegion"
  ],
  "additionalProperties": false,
  
