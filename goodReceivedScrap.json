{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Goods Received Scrap (Headerâ€“Detail) Schema",
  "description": "One object represents a single scrap receipt: header + detail lines.",
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "description": "Scrap receipt header section.",
      "properties": {
        "transactionNo": {
          "type": "string",
          "maxLength": 50,
          "description": "Primary transaction number."
        },
        "transactionDate": {
          "type": "string",
          "description": "Transaction date (e.g., DD-MMM-YY or DD/MM/YYYY)."
        },
        "department": {
          "type": "string",
          "maxLength": 100,
          "description": "Department name."
        }
      },
      "required": ["transactionNo", "transactionDate", "department"],
      "additionalProperties": false
    },

    "details": {
      "type": "array",
      "description": "Scrap receipt detail lines.",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "scrapCode": {
            "type": "string",
            "maxLength": 50,
            "description": "Scrap code."
          },
          "description": {
            "type": "string",
            "maxLength": 100,
            "description": "Scrap description."
          },
          "qty": {
            "type": "number",
            "description": "Quantity (float)."
          },
          "unitCode": {
            "type": "string",
            "maxLength": 10,
            "description": "Unit of measure."
          },
          "orderNo": {
            "type": "string",
            "maxLength": 25,
            "description": "Related order number."
          },
          "itemCode": {
            "type": "string",
            "maxLength": 50,
            "description": "Related material item code."
          }
        },
        "required": ["scrapCode", "description", "qty", "unitCode", "orderNo", "itemCode"],
        "additionalProperties": false
      }
    }
  },
  "required": ["header", "details"],
  "additionalProperties": false,
  "examples": [
    {
      "header": {
        "transactionNo": "0009/IX/2025",
        "transactionDate": "13-Sep-25",
        "department": "Cutting"
      },
      "details": [
        {
          "scrapCode": "SCRP-01",
          "description": "Scrap Iron Import",
          "qty": 2,
          "unitCode": "KGM",
          "orderNo": "FG-RAK-001",
          "itemCode": "RM-001"
        },
        {
          "scrapCode": "SCRP-01",
          "description": "Scrap Iron Import",
          "qty": 1,
          "unitCode": "KGM",
          "orderNo": "FG-RAK-002",
          "itemCode": "RM-001"
        }
      ]
    },
    {
      "header": {
        "transactionNo": "0010/IX/2025",
        "transactionDate": "13-Sep-25",
        "department": "Cutting"
      },
      "details": [
        {
          "scrapCode": "SCRP-02",
          "description": "Scrap Iron Local",
          "qty": 1,
          "unitCode": "KGM",
          "orderNo": "FG-RAK-001",
          "itemCode": "RM-002"
        }
      ]
    }
  ]
}
