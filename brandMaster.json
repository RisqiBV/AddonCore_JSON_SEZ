{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer Brand Schema",
  "description": "JSON contract for Customer Brand data including timestamps.",
  "type": "object",
  "properties": {
    "customerCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Customer code (required)."
    },
    "brandCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Brand code (primary key)."
    },
    "brandName": {
      "type": "string",
      "maxLength": 50,
      "description": "Brand name."
    },
    "createdAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Creation timestamp."
    },
    "updatedAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Last update timestamp."
    },
    "deletedAt": {
      "type": ["string", "null"],
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Deletion timestamp (nullable)."
    }
  },
  "required": ["customerCode", "brandCode", "brandName", "createdAt", "updatedAt", "deletedAt"],
  "additionalProperties": false,
  "examples": [
    {
      "customerCode": "CUST-POL01",
      "brandCode": "SR",
      "brandName": "SecureRack",
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    },
    {
      "customerCode": "CUST-ARMY01",
      "brandCode": "GR",
      "brandName": "GardaRack",
      "createdAt": "2025-09-29 10:05:00.000",
      "updatedAt": "2025-09-29 10:05:00.000",
      "deletedAt": null
    }
  ]
}
