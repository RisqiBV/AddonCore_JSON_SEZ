{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sales Order Schema",
  "description": "JSON contract for Finish Good Orders including timestamps.",
  "type": "object",
  "properties": {
    "orderNO": {
      "type": "string",
      "maxLength": 25,
      "description": "Primary key for the order."
    },
    "article": {
      "type": "string",
      "maxLength": 50,
      "description": "Description of finished good."
    },
    "brandCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Brand code."
    },
    "deliveryDate": {
      "type": ["string", "null"],
      "description": "Requested delivery date (optional). Format: DD-MM-YYYY"
    },
    "productGroup": {
      "type": "string",
      "maxLength": 50,
      "description": "Product group."
    },
    "poCust": {
      "type": "string",
      "maxLength": 50,
      "description": "Customer PO reference."
    },
    "colorFinishGood": {
      "type": "string",
      "maxLength": 250,
      "description": "Finish good color."
    },
    "sizeFinishGoodCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Finish good size code."
    },
    "qtyOrder": {
      "type": "number",
      "description": "Quantity ordered."
    },
    "orderType": {
      "type": "string",
      "enum": ["FOB", "CMT"],
      "maxLength": 10,
      "description": "Order type."
    },
    "sku": {
      "type": "string",
      "maxLength": 50,
      "description": "SKU of the finished good."
    },
    "unitCode": {
      "type": "string",
      "maxLength": 10,
      "description": "Unit of the finished good."
    },
    "createdAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Creation timestamp."
    },
    "updatedAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Last update timestamp."
    },
    "deletedAt": {
      "type": ["string", "null"],
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3}$",
      "description": "Deletion timestamp (nullable)."
    }
  },
  "required": [
    "orderNO",
    "article",
    "brandCode",
    "productGroup",
    "poCust",
    "colorFinishGood",
    "sizeFinishGoodCode",
    "qtyOrder",
    "orderType",
    "sku",
    "unitCode",
    "createdAt",
    "updatedAt",
    "deletedAt"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "orderNO": "FG-RAK-001",
      "article": "Weapon Storage Rack",
      "brandCode": "SR",
      "deliveryDate": "09-10-2025",
      "productGroup": "weapons rack",
      "poCust": "OWP001",
      "colorFinishGood": "Black",
      "sizeFinishGoodCode": "M",
      "qtyOrder": 100,
      "orderType": "FOB",
      "sku": "WR-S-ST-10-25",
      "unitCode": "PCE",
      "createdAt": "2025-09-29 10:00:00.000",
      "updatedAt": "2025-09-29 10:00:00.000",
      "deletedAt": null
    },
    {
      "orderNO": "FG-RAK-001",
      "article": "Weapon Storage Rack",
      "brandCode": "SR",
      "deliveryDate": "09-10-2025",
      "productGroup": "weapons rack",
      "poCust": "OWP001_1",
      "colorFinishGood": "Black",
      "sizeFinishGoodCode": "L",
      "qtyOrder": 32,
      "orderType": "FOB",
      "sku": "WR-S-ST-10-25",
      "unitCode": "PCE",
      "createdAt": "2025-09-29 10:05:00.000",
      "updatedAt": "2025-09-29 10:05:00.000",
      "deletedAt": null
    }
  ]
}
