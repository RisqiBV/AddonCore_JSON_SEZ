{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Good Received General (Headerâ€“Detail) Schema",
  "description": "One object represents a single GR transaction: header + detail lines.",
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "description": "GR header section.",
      "properties": {
        "transactionNo": {
          "type": "string",
          "maxLength": 50,
          "description": "Primary transaction number."
        },
        "transactionDate": {
          "type": "string",
          "description": "Transaction date (DD-MM-YYYY)."
        },
        "poNo": {
          "type": "string",
          "maxLength": 50,
          "description": "Linked Purchase Order number."
        },
        "bcCode": {
          "type": "string",
          "maxLength": 10,
          "description": "BC (customs) code."
        },
        "bcNo": {
          "type": "string",
          "maxLength": 10,
          "description": "BC document number."
        },
        "bcDate": {
          "type": "string",
          "description": "BC document date (e.g., DD-MM-YYYY)."
        }
      },
      "required": [
        "transactionNo",
        "transactionDate",
        "poNo",
        "bcCode",
        "bcNo",
        "bcDate"
      ],
      "additionalProperties": false
    },

    "details": {
      "type": "array",
      "description": "Detail item lines for this GR transaction.",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "fc": {
            "type": "string",
            "maxLength": 15,
            "enum": ["PO", "FOC"],
            "description": "PO or FOC (Free Of Charge)."
          },
          "itemCode": {
            "type": "string",
            "maxLength": 50,
            "description": "General item code."
          },
          "vendorQty": {
            "type": "number",
            "description": "Quantity by Order UOM (decimal(18,2))."
          },
          "vendorUnitCode": {
            "type": "string",
            "maxLength": 10,
            "description": "Order UOM."
          },
          "internalQty": {
            "type": "number",
            "description": "Quantity by Base UOM (float)."
          },
          "internalUnitCode": {
            "type": "string",
            "maxLength": 10,
            "description": "Base UOM."
          },
          "unitPrice": {
            "type": "number",
            "description": "Unit price."
          },
          "rate": {
            "type": "number",
            "description": "Exchange rate to IDR."
          }
        },
        "required": [
          "fc",
          "itemCode",
          "vendorQty",
          "vendorUnitCode",
          "internalQty",
          "internalUnitCode",
          "unitPrice",
          "rate"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "header",
    "details"
  ],
  "additionalProperties": false,
  
  "payload examples": [
    {
      "header": {
        "transactionNo": "BBM/001/2025",
        "transactionDate": "09-08-2025",
        "poNo": "PO/KWL/002/2025",
        "bcCode": "611",
        "bcNo": "000012",
        "bcDate": "09-08-2025"
      },
      "details": [
        {
          "fc": "PO",
          "itemCode": "MSN-001",
          "vendorQty": 10,
          "vendorUnitCode": "KGM",
          "internalQty": 10,
          "internalUnitCode": "KGM",
          "unitPrice": 10,
          "rate": 16258
        },
        {
          "fc": "PO",
          "itemCode": "SPR-001",
          "vendorQty": 150,
          "vendorUnitCode": "YRD",
          "internalQty": 13716,
          "internalUnitCode": "CM",
          "unitPrice": 3,
          "rate": 16258
        }
      ]
    }
  ]
}
